<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101010"
    android:orientation="vertical"
    tools:context=".Activity.CastDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#141516">

        <RelativeLayout
            android:id="@+id/line12"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/imgCastHome"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo_metflix" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/searchImg"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="16dp"
                android:layout_toLeftOf="@+id/notification"
                android:src="@drawable/logo_search" />

            <ImageView
                android:id="@+id/notification"

                android:layout_width="27dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:layout_toLeftOf="@+id/purchase"
                android:src="@drawable/notification" />


            <Button

                android:id="@+id/purchase"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/play_btn_bg"
                android:padding="1dp"
                android:text="VIP Member"
                android:textAllCaps="false"
                android:textSize="12dp">


            </Button>


        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#101010"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:background="#101010"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/castDetailProfile"
                        android:layout_width="170dp"
                        android:layout_height="230dp"
                        android:scaleType="centerCrop"

                        />
                </androidx.cardview.widget.CardView>


                // thông tin diễn viên

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên: "
                            android:textColor="#ffff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/castDetailName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="46dp"
                            android:layout_marginBottom="-2dp"
                            android:text="Đỗ Mạnh Hà"
                            android:textColor="#ffff"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Ngày sinh: "
                            android:textColor="#ffff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/castDetailDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="20dp"
                            android:text="14/12/1999"
                            android:textColor="#ffff"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Giới tính: "
                            android:textColor="#ffff"
                            android:textSize="17dp" />

                        <TextView
                            android:id="@+id/castDetailGender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="20dp"
                            android:text="Nam"
                            android:textColor="#ffff"
                            android:textSize="17dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Quê quán: "
                        android:textColor="#ffff"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/castDetailPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="22dp"
                        android:layout_marginBottom="-1dp"
                        android:text="Hành tinh diệu kỳ"
                        android:textColor="#ffff"
                        android:textSize="17dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">
                // tiểu sử

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Tiểu sử"
                    android:textColor="#ffff"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/castDetailStory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đẹp trai, học giỏi, pro"
                    android:textColor="#ffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="Các phim đã tham gia"
                    android:textColor="#ffff"
                    android:textSize="20dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/castMovieJoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>