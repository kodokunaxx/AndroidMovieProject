<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sing_up_background"
    tools:context=".Activity.StartActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="100dp">

        <ImageView

            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo_metflix" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginLeft="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnSignInStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_animation"
            android:text="Sign In"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/btnSignUpStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_animation_sign_up"
            android:text="Sign Up"
            android:textColor="#050505" />


    </LinearLayout>
</RelativeLayout>