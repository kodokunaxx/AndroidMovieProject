<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141516"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="1000dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/avatar" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/bigtxtNameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Đỗ Mạnh Hà"
                android:textColor="#ffff"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnEditUser"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Sửa thông tin"
                    android:background="@drawable/button_animation"
                    android:textColor="#ffff"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnEditPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Đổi mật khẩu"
                    android:background="@drawable/button_animation"
                    android:textColor="#ffff"
                    android:textAllCaps="false" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="27dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="Người dùng:"
                    android:textColor="#ffff"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/txtNameUser"
                    android:textAlignment="viewEnd"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="Chưa có"
                    android:textColor="#ffff"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="Tuổi:"
                    android:textColor="#ffff"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/txtAgeUser"
                    android:textAlignment="viewEnd"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:text="Chưa có"
                    android:inputType="number"
                    android:textColor="#ffff"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="Giới tính:"
                    android:textColor="#ffff"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/txtGenderUser"
                    android:textAlignment="viewEnd"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:text="Chưa có"
                    android:textColor="#ffff"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="Email:"
                    android:textColor="#ffff"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/txtEmailUser"
                    android:textAlignment="viewEnd"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:text="Chưa có"
                    android:textColor="#ffff"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#2E2D2D">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="Địa chỉ:"
                    android:textColor="#ffff"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/txtAddressUser"
                    android:textAlignment="viewEnd"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:text="Chưa có"
                    android:textColor="#ffff"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textSize="15dp" />

            </RelativeLayout>



                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Trở về"
                    android:background="@drawable/button_animation"
                    android:textColor="#ffff"
                    android:textAllCaps="false" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>